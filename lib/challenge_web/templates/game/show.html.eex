<h1>Show Game</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @game.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @game.description %>
  </li>

  <li>
    <strong>Image:</strong>
    <%= @game.image %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.game_path(@conn, :edit, @game) %></span>
<span><%= link "Back", to: Routes.game_path(@conn, :index) %></span>
