<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for game <- @games do %>
    <tr>
      <td><%= game.name %></td>
      <td><%= game.description %></td>
      <td><img src="<%= Routes.static_path(@conn, "/images/#{game.image}") %>" /></td>

      <td>
        <%= link "Show", to: Routes.game_path(@conn, :show, game) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
